<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layoutList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/purple_200"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/team1"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/wins"
                android:layout_toEndOf="@+id/number1"
                android:gravity="center_vertical"
                android:text="Ηρακλής"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wins"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="16"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/losses"/>

            <TextView
                android:id="@+id/losses"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/rounds"/>

            <TextView
                android:id="@+id/rounds"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="17"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/points1"/>

            <TextView
                android:id="@+id/points1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="33"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutPlayer1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>