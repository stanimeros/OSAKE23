<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parke_2"
    tools:context=".menu_admin">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/gamesbtn"
                android:layout_width="335dp"
                android:layout_height="70dp"
                android:layout_marginTop="57dp"
                android:background="#BD1616"
                android:text="Αγώνες"
                android:textColor="@color/white"
                android:textSize="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/createAteam"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="100dp"
                android:background="@color/teal_200"
                android:text="Δημιουργία Ομάδας"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="@+id/gamesbtn"
                app:layout_constraintStart_toStartOf="@+id/gamesbtn"
                app:layout_constraintTop_toBottomOf="@+id/gamesbtn" />

            <Button
                android:id="@+id/createAplayer"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="50dp"
                android:background="@color/teal_200"
                android:text="Δημιουργία Παίκτη"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="@+id/createAteam"
                app:layout_constraintStart_toStartOf="@+id/createAteam"
                app:layout_constraintTop_toBottomOf="@+id/createAteam" />


            <Button
                android:id="@+id/incert"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:text="Δημιουργία Πρωταθλήματος"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/createAplayer"
                app:layout_constraintStart_toStartOf="@+id/createAplayer"
                app:layout_constraintTop_toBottomOf="@+id/createAplayer"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>